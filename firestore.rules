rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Submissions collection
    match /submissions/{submissionId} {
      // Allow public reading of submissions
      allow read: if true;
      
      // Only allow server-side writes (Firebase Admin SDK)
      // Client-side writes are handled through the API endpoint
      allow write: if false;
    }
    
    // Users collection (existing rules if any)
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Feedback collection (existing rules if any)
    match /feedback/{feedbackId} {
      allow read, write: if request.auth != null;
    }
    
    // Deny all other access by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}